include ./_background-effect.pug
mixin text-block(pageName, title, description, cta, ctaCaption)
    if(cta != true)
        section(id=pageName, class=pageName)
            .container  
                    .text-block
                            h1.text-block__title !{title}
                            p.text-block__description !{description}
            +background-effect(true, 'pc')            
        block                        
    else
        section(id=pageName class=pageName)
            .container  
                .text-block
                    h1.text-block__title
                        each titles in title
                            span= titles
                    p.text-block__description !{description}
                    .text-block__cta
                        span(class="cta js-cta-"+ctaCaption)
                            a(href="team.html")=ctaCaption
                            div
            +background-effect(true, 'c')            
        block                    
